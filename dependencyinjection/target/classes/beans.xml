<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="student" class="com.seleniumexpress.di.dependencyinjection.Student">
	<!-- Don't only create the object but inject the dependency(property value) as well -->
	<!-- Make sure property name is same as variable name -->
	
	<constructor-arg name="studentname" value="ani"/>

</bean>

</beans>